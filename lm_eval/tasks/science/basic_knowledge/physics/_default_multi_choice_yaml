dataset_path: DeepPrinciple/physics_multiple_choice
dataset_name: null
test_split: train  # Dataset has 75 rows, 72 with valid Task, 3 missing Task

# Process ALL documents to avoid losing the 3 examples with missing Task
process_docs: !function utils.process_all_docs
doc_to_text: >
  You are an expert in physics. The following are multiple choice questions about physics.
  Let's think step by step. Please wrap the final answer in XML tags: <answer>X</answer> (where X can be A, B, C, D, or combinations like AB, ABC, etc.)
  Question: {{Question.strip()}}
  A: {{Option_A}}
  B: {{Option_B}}
  C: {{Option_C}}
  D: {{Option_D}}
  Answer:
doc_to_target: Answer
task: multiple_choice_physics_all
filter_list:
  - name: "xml-extract"
    filter:
      - function: "regex"
        regex_pattern: "(?<=<answer>)[^<]+(?=</answer>)"  # Use lookbehind/lookahead to match content directly
        group_select: 0  # Use group 0 to avoid IndexError as user suggested
        fallback: "[invalid]"
generation_kwargs:
  max_tokens: 4096
  until:
    - "</s>"
    - "Q:"
    - "<|im_end|>"
  do_sample: false
  temperature: 0.0
num_fewshot: 0
metric_list:
  - metric: exact_match
    aggregation: mean
    higher_is_better: true
    ignore_case: true
    ignore_punctuation: true
    ignore_numbers: false  # Keep numbers for answer parsing
